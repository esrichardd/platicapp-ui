{
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": false,
  "trailingComma": "all",
  "importOrder": [
    "^node:",
    "^(path|fs|url|crypto)$",
    "^react$",
    "^next",
    "<THIRD_PARTY_MODULES>",
    "^@/services/(.*)$",
    "^@/lib/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/atoms/(.*)$",
    "^@/components/molecules/(.*)$",
    "^@/components/organisms/(.*)$",
    "^@/components/templates/(.*)$",
    "^@/components/(.*)$",
    "^@/styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
